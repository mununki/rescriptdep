{
  "name": "vscode-rescriptdep",
  "displayName": "Bibimbob",
  "description": "A tool to analyze dependencies between ReScript modules",
  "version": "0.1.0",
  "publisher": "mununki",
  "icon": "images/rescriptdep_icon.png",
  "galleryBanner": {
    "color": "#1E1E1E",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mununki/rescriptdep.git"
  },
  "homepage": "https://github.com/mununki/rescriptdep",
  "bugs": {
    "url": "https://github.com/mununki/rescriptdep/issues"
  },
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:bsconfig.json",
    "workspaceContains:rescript.json"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "rescriptdep-visualizer.showDependencyGraph",
        "title": "ReScript: Show Dependency Graph"
      },
      {
        "command": "rescriptdep-visualizer.focusModuleDependencies",
        "title": "ReScript: Focus On Module Dependencies"
      },
      {
        "command": "rescriptdep-visualizer.clearCache",
        "title": "ReScript: Clear Dependency Cache"
      }
    ]
  },
  "screenshots": [
    {
      "path": "images/rescriptdep_screenshot_0.png",
      "description": "ReScript Dependency Graph Overview"
    },
    {
      "path": "images/rescriptdep_screenshot_1.png",
      "description": "ReScript Module Dependencies View"
    }
  ],
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.98.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^9.21.0",
    "esbuild": "^0.25.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}